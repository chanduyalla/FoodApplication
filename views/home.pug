     .img-top {
        display: none;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 99;
    }
    .d:hover .img-top {
        display: inline;
        position: absolute;
        top: 50;
        left: 18.5;
        z-index: 99;
    }
nav.navbar.navbar-expand-lg.navbar-dark.b
  .container-fluid
    a.navbar-brand(href="/home") Home
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mt-3
        li.nav-item
          a.nav-link(href='/myfooditems').me-2 My Food Items
        li.nav-item
          a.nav-link(href='/additem').me-2 Add Food Items
        li.nav-item
          a.nav-link(href='/receivedorders').me-2 Recieved Orders
        li.nav-item
          a.nav-link(href='/placedorder').me-2 Placed Orders
        span(style="margin-left:280px").mt-2.me-1 Select Location:
        form(action="/gettingfood" name="sf" method="post").d-flex
            select(name="selectedoption").form-select
                option(val="all" selected) all
                    each v in fd 
                        option(value=v)=v 
            button.btn.btn-light.ms-2 search 
            a(href='#').nav-link.ms-5.c.me-5=u
            a(href='/logout').nav-link.ms-5.me-2.c Logout
if sf=="all"
    h4.mt-5 All Available Food Items
else 
    h4.mt-5="Available Food Items at "+sf
div.d-flex.flex-wrap
    each val,i in allfood
        if sf==val.location
            a(href="/getfooddetails/"+val.id)
                div.card.ms-5.me-4.mt-5.p-3.d(style="height:300px;width:220px")
                    img(src=val.filenames[0] width="180px").card-image.my-auto.mx-auto
                    img(src=val.filenames[1] class="img-top" width="180px").card-image
                    li.card-title.mx-auto="name:"+val.foodname
                    li.card-title.mx-auto="price: "+"₹"+val.price 
        if sf=='all'
            a(href="/getfooddetails/"+val.id)
                div.card.ms-5.me-4.mt-5.p-3.d(style="height:300px;width:220px")
                    img(src=val.filenames[0] width="180px").card-image.my-auto.mx-auto
                    img(src=val.filenames[1] class="img-top" width="180px").card-image
                    li.card-title.mx-auto="name:"+val.foodname
                    li.card-title.mx-auto="price: "+"₹"+val.price 