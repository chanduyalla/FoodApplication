nav.navbar.navbar-expand-lg.navbar-dark.b
    div.container-fluid
        a(href="/home").navbar-brand Home
        button.navbar-toggler
            span.navbar-toggler-icon
        div.collapse.navbar-collapse#navbarNavAltMarkup 
            div.navbar-nav
                a(href='/myfooditems').nav-link.ms-3 My Food Items
                a(href='/additem').nav-link.ms-3 Add Food Item
                a(href='/receivedorders').nav-link.ms-3 Received Orders
                a(href='/placedorder').nav-link.ms-3 Placed Order 
            p.mt-2.me-1(style="margin-left:180px").c Select Location :
            form(action="/gettingfood" name="sf" method="post").d-flex.mt-2
                select(name="selectedoption").form-select
                    option(val="all" selected) all
                        each v in fd 
                            option(value=v)=v 
                button.btn.btn-light.ms-1.me-5 search
                a(href='#').nav-link.ms-5.c.me-5=u
                a(href='/logout').nav-link.ms-5.me-2.c Logout
if sf=="all"
    h4.mt-5 All Available Food Items
else 
    h4.mt-5="Available Food Items at "+sf
div.d-flex.flex-wrap
    each val,i in allfood
        if sf==val.location
            a(href="/getfooddetails/"+val.id)
                div.card.ms-5.me-4.mt-5.p-3.d(style="height:300px;width:220px")
                    img(src=val.filenames[0] width="180px").card-image.my-auto.mx-auto
                    img(src=val.filenames[1] class="img-top" width="180px").card-image
                    li.card-title.mx-auto="name:"+val.foodname
                    li.card-title.mx-auto="price: "+"₹"+val.price 
        if sf=='all'
            a(href="/getfooddetails/"+val.id)
